            transition: transform 1s;
            transform-style: preserve-3d;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }

        .card.is-flipped {
            transform: rotateY(180deg);
        }

        /* Common Face Styles */
        .card-face {
